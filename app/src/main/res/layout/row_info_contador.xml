<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:elevation="8dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#F2F0F0"
            app:cardCornerRadius="16dp"
            android:elevation="16dp">
            <TextView
                android:id="@+id/tvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:text="ID"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Barrio"/>
            <TextView
                android:id="@+id/tvBarrio"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="barrio"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Direcccion"/>
            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="direcccion"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Valor"/>
            <TextView
                android:id="@+id/tvValor"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="valor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Contador"/>
            <TextView
                android:id="@+id/tvContador"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="valor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Fecha Creacion"/>
            <TextView
                android:id="@+id/tvFechaCreacion"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="fecha creacion"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#123A12"
                app:cardCornerRadius="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:text="Actualizar"
                    android:gravity="center_horizontal"
                    android:layout_margin="8dp"/>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="16dp"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#E8171C"
                app:cardCornerRadius="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textAlignment="center"
                    android:text="Borrar"
                    android:gravity="center_horizontal"
                    android:layout_margin="8dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>